{% extends "layouts/azmind.html.twig" %}

{# Overrides blocks in head of base template #}
{% block page_title %}{{translate('SIGNIN_OR_REGISTER')}}{% endblock %}

{% block page_description %}{{translate('LOGIN.DESCRIPTION', {'site_name': site.title })}}{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
            <h1>{{translate('PAGE.LOGIN.TITLE')}}</h1>
            <div class="description">
                <p>
                    {{translate('PAGE.LOGIN.SUBTITLE')}}
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 show-forms">
            {% if site.registration.enabled %}
                <span class="show-login-form active">{{translate('SIGNIN')}}</span>
                <span class="show-forms-divider">/</span>
                <span class="show-register-form">{{translate('REGISTER')}}</span>
            {% else %}
                <span class="show-login-form-static">{{translate('SIGNIN')}}</span>
            {% endif %}
        </div>
    </div>
    {% if site.registration.enabled %}
        <div class="row register-form">
            <div class="col-sm-4 col-sm-offset-1">
                <div id="alerts-register">

                </div>
                <form id="register" role="form" action="{{site.uri.public}}/account/register" method="post" class="r-form">
                    {% include "components/csrf.html.twig" %}
                    <div class="form-group">
                        <label class="sr-only" for="r-form-username">{{translate('USERNAME')}}</label>
                        <input type="text" name="user_name" placeholder="{{translate('USERNAME.CHOOSE')}}" class="form-control" id="r-form-username">
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="sr-only" for="r-form-first-name">{{translate('FIRST_NAME')}}</label>
                            <input type="text" name="first_name" placeholder="{{translate('FIRST_NAME')}}" class="form-control" id="r-form-first-name">
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="sr-only" for="r-form-last-name">{{translate('LAST_NAME')}}</label>
                            <input type="text" name="last_name" placeholder="{{translate('LAST_NAME')}}" class="form-control" id="r-form-last-name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="r-form-email">{{translate('EMAIL')}}</label>
                        <input type="text" name="email" placeholder="{{translate('EMAIL')}}" class="form-control" id="r-form-email">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="r-form-password">{{translate('PASSWORD')}}</label>
                        <input type="password" name="password" placeholder="{{translate('PASSWORD.BETWEEN', {min: 12, max: 100})}}" class="form-control" id="r-form-password">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="r-form-passwordc">{{translate('PASSWORD.CONFIRM')}}</label>
                        <input type="password" name="passwordc" placeholder="{{translate('PASSWORD.CONFIRM')}}" class="form-control" id="r-form-passwordc">
                    </div>
                    {% if site.registration.captcha %}
                        <div class="form-group">
                            <label class="sr-only" for="r-form-passwordc">{{translate('CAPTCHA.VERIFY')}}</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="captcha" placeholder="{{translate('CAPTCHA.SPECIFY')}}" class="form-control" id="r-form-captcha">
                                </div>
                                <div class="col-md-6 form-col-captcha">
                                        <img src="{{site.uri.public}}/account/captcha" id="captcha" data-target="#r-form-captcha">
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="collapse">
                        <label>Spiderbro: Don't change me bro, I'm tryin'a catch some flies!</label>
                        <input name="spiderbro" id="spiderbro" value="http://"/>
                    </div>
                    <div class="text-left">
                        {{translate('TOS_AGREEMENT', {
                            'site_title' : site.title,
                            'url' : '#" data-toggle="modal" data-target="#tos',
                            'linkText' : '&TOS'
                        }) | raw}}
                    </div>
                    <button type="submit" class="btn">{{translate('REGISTER_ME')}}</button>
                </form>
            </div>
            <div class="col-sm-6 forms-right-icons">
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-pencil"></i></div>
                    <div class="col-sm-10">
                        <h3>Beautiful Forms</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-commenting"></i></div>
                    <div class="col-sm-10">
                        <h3>Awesome Login</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 icon"><i class="fa fa-magic"></i></div>
                    <div class="col-sm-10">
                        <h3>Great Registration</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row login-form">
        <div class="col-sm-4 col-sm-offset-1">
            <div id="alerts-login">

            </div>
            <form id="sign-in" role="form" action="{{site.uri.public}}/account/login" method="post" class="l-form">
                {% include "components/csrf.html.twig" %}
                <div class="form-group">
                    <label class="sr-only" for="l-form-username">{{translate('USERNAME')}}</label>
                    <input type="text" name="user_name" placeholder="{{translate('USERNAME')}}" class="form-control" id="l-form-username">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="l-form-password">{{translate('PASSWORD')}}</label>
                    <input type="password" name="password" placeholder="{{translate('PASSWORD')}}" class="form-control" id="l-form-password">
                </div>
                <div class="form-group">
                    <label for="l-form-rememberme">
                        <input type="checkbox" name="rememberme" id="l-form-rememberme"> {{translate('REMEMBER_ME_ON_COMPUTER')}}
                    </label>
                </div>
                <button type="submit" class="btn">{{translate('SIGNIN')}}</button>
            </form>
            <div class="registration-links">
                <a href="{{site.uri.public}}/account/forgot-password">{{translate('PASSWORD.FORGET')}}</a>
                <br>
                {# TODO: hide this link if public registration is turned off? #}
                <a href="{{site.uri.public}}/account/resend-verification">{{translate('ACCOUNT.VERIFICATION.RESEND')}}</a>
            </div>
            <div class="social-login">
                <p>{{translate('LOGIN.SOCIAL')}}:</p>
                <div class="social-login-buttons">
                    <a class="btn btn-link-1" href="#"><i class="fa fa-facebook"></i></a>
                    <a class="btn btn-link-1" href="#"><i class="fa fa-twitter"></i></a>
                    <a class="btn btn-link-1" href="#"><i class="fa fa-google-plus"></i></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 forms-right-icons">
            <div class="row">
                <div class="col-sm-2 icon"><i class="fa fa-user"></i></div>
                <div class="col-sm-10">
                    <h3>New Features</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 icon"><i class="fa fa-eye"></i></div>
                <div class="col-sm-10">
                    <h3>Easy To Use</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 icon"><i class="fa fa-twitter"></i></div>
                <div class="col-sm-10">
                    <h3>Social Integrated</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "components/validators.js.twig" %}
    </script>

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/sign-in-or-register') | raw }}

{% endblock %}
